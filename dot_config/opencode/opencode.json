{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3
  },

  "theme": "catppuccin",

  "permission": {
    "edit": "deny"
  },

  "tools": {
    "read": true,
    "edit": true,
    "write": false,
    "bash": true,
    "webfetch": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true
  },

  "share": "disabled",

  "provider": {},

  "agent": {
    "plan": {
      "tools": {
        "write": false,

        "bash": false
      }
    },

    "build": {
      "permission": {
        "edit": "ask",
        "bash": { "git push": "ask" }
      }
    }
  },

  "command": {
    "commit-git": {
      "template": "commit the changes in git.",
      "description": "git commit",
      "agent": "build"
    }
  }
}
