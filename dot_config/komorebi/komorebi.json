{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "focus_follows_mouse": "Komorebi",
  "mouse_follows_focus": false,
  "border": true,
  "border_width": 8,
  "border_offset": -1,
  "border_style": "Square",
  "border_colours": {
    "single": "#42a5f5",
    "stack": "#00a542",
    "monocle": "#ff3399",
    "unfocused": "#808080"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "label": "Title",
    "tabs": {
      "width": 300,
      "focused_text": "#42a5f5",
      "unfocused_text": "#bd93f9",
      "background": "#141414"
    }
  },

  "transparency" : true,
  "transparency_alpha" : 200,
  "border_overflow_applications": [],
  "global_work_area_offset": {
    "top": 30,
    "bottom": 15,
    "left": 0,
    "right": 0
  },
  "float_rules": [
    {
      "kind": "Exe",
      "id": "Zebar.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "python.exe",
      "matching_strategy": "Equals"
    },
    [
      {
        "kind": "Exe",
        "id": "WorkspotClient.exe",
        "matching_strategy": "Equals"
      },
      {
        "kind": "Title",
        "id": "Workspot",
        "matching_strategy": "Equals"
      }
    ],
    [
      {
        "kind": "Exe",
        "id": "olk.exe",
        "matching_strategy": "Equals"
      },
      {
        "kind": "Title",
        "id": "Reminders",
        "matching_strategy": "StartsWith"
      }
    ],
    {
        "kind": "Title",
        "id": "Arc extension popup",
        "matching_strategy": "Equals"
    },
    {
        "kind": "Title",
        "id": "ActiproWindowChromeShadow",
        "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "komorebi-gui",
      "matching_strategy": "Equals"
    },
    {
        "kind": "Title",
        "id": "New Project",
        "matching_strategy": "Contains"
    },
    [
    {
        "kind": "Exe",
        "id": "ArcGISPro.exe",
        "matching_strategy": "Equals"
    },
    {
       "kind": "Title",
       "id": "Properties",
       "matching_strategy": "Contains"
    }
    ],
    {
       "kind": "Title",
       "id": "ArcGIS Project",
       "matching_strategy": "Contains"
    },
    [
      {
        "kind": "Exe",
        "id": "RemoteDesktopManager.exe",
        "matching_strategy": "Equals"
      },
      {
        "kind": "Title",
        "id": "Remote Desktop Manager - Password List",
        "matching_strategy": "Equals"
      }
    ]
  ],

  "manage_rules": [
    {
      "kind": "Exe",
      "id": "Survey123",
      "matching_strategy": "Contains"
    },
    [
    {
      "kind": "Exe",
      "id": "RemoteDesktopManager.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "[",
      "matching_strategy": "Contains"
    }
    ],
    [
    {
      "kind": "Exe",
      "id": "RemoteDesktopManager.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Remote Desktop Manager",
      "matching_strategy": "Equals"
    }
    ]
   ],
  "monitors": [
    {
      "window_based_work_area_offset_limit": 1,
      "window_based_work_area_offset": {
        "left": 300,
        "top": 0,
        "right": 600,
        "bottom": 0
      },

      "workspaces": [
        {
          "name": "1 office365",
          "layout": "UltrawideVerticalStack",
          "workspace_padding": 15,
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "ms-teams.exe"
            },
            {
              "kind": "Exe",
              "id": "olk.exe"
            }
          ]
        },
        {
          "name": "2 email",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "thunderbird.exe"
            }
          ]
        },
        {
          "name": "3 cal/todoo",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Morgen.exe"
            },
            {
              "kind": "Exe",
              "id": "Todoist.exe"
            }
          ]
        },
        {
          "name": "4 notes",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Obsidian.exe"
            }
          ]
        },
        {
          "name": "5 gis",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "ArcGISPro.exe"
            }
          ]
        },
        {
          "name": "6 rdp",
          "layout": "BSP",
          "workspace_rules": [
            {
              "kind": "Exe",
              "id": "RemoteDesktopManager.exe"
            },
            {
              "kind": "Exe",
              "id": "WorkspotClient.exe"
            },
            {
              "kind": "Exe",
              "id": "WorkspotClient.exe"
            }
          ]
        },
        {
          "name": "7",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": []
        },
        {
          "name": "8 music",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Spotify.exe"
            }
          ]
        },
        {
          "name": "9 no-tiled"
        }
      ]
    }
  ]
}
