{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "window_hiding_behaviour": "Minimize",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "focus_follows_mouse": "Komorebi",
  "mouse_follows_focus": false,
  "active_window_border": true,
  "border_width": 6,
  "border_offset": -1,
  "active_window_border_style": "Square",
  "active_window_border_colours": {
    "single": {
      "r": 66,
      "g": 165,
      "b": 245
    },
    "stack": {
      "r": 256,
      "g": 165,
      "b": 66
    },
    "monocle": {
      "r": 255,
      "g": 51,
      "b": 153
    }
  },

  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#00a542",
      "unfocused_text": "#b3b3b3",
      "background": "#141414"
    }
  },

  "border_overflow_applications": [],

  "float_rules": [
    {
      "kind": "Exe",
      "id": "Zebar.exe",
      "matching_strategy": "Equals"
    },

    [{
      "kind": "Exe",
      "id": "WorkspotClient.exe",
      "matching_strategy": "Equals"
    },
    {
        "kind": "Title",
        "id": "Workspot",
        "matching_strategy": "Equals"
    },
    ],
  ],

  "manage_rules": [],

  "monitors": [
    {
      "work_area_offset": {
        "top": 30,
        "bottom": 15,
        "left": 0,
        "right": 0
      },
      "workspaces": [
        {
          "name": "1 chat",
          "layout": "UltrawideVerticalStack",
          "workspace_padding": 15,
          "workspace_rules": [
            {
              "kind": "Exe",
              "id": "Teams.exe"
            },
            {
              "kind": "Exe",
              "id": "Spark Desktop.exe"
            },
            {
              "kind": "Exe",
              "id": "Discord.exe"
            }
          ]
        },
        {
          "name": "2 caltsk",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Morgen.exe"
            },
            {
              "kind": "Exe",
              "id": "Obsidian.exe"
            }
          ]
        },
        {
          "name": "3 term",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "wezterm-gui.exe"
            }
          ]
        },
        {
          "name": "4 gis",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "ArcGISPro.exe"
            }
          ]
        },
        {
          "name": "5 rdp",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "RemoteDesktopManager.exe"
            },
            {
              "kind": "Exe",
              "id": "WorkspotClient.exe"
            }
          ]
        },
        {
          "name": "6",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": []
        },
        {
          "name": "7 mus",
          "layout": "UltrawideVerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Spotify.exe"
            }
          ]
        },
        {
          "name": "8 no-t"
        }
      ]
    }
  ]
}
